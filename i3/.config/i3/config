set $mod 	Mod4
set $mos 	Mod4+Shift
set $moc 	Mod4+Control
set $e 		exec --no-startup-id
set $ea 	exec_always --no-startup-id
set $term   kitty

floating_modifier $mod
hide_edge_borders smart
font pango:andika 11

for_window [class="^.*"] border pixel 2, title_format "%class >> %title"

for_window [class="mpv"]                fullscreen enable
for_window [title="alsamixer"]          floating enable
for_window [class="VirtualBox Manager"] floating enable
for_window [class="VirtualBox Machine"] fullscreen enable, border 0

bindsym $mod+a 					$e 	kitty -e alsamixer
bindsym $mod+BackSpace 			$e 	dm-tool lock
bindsym $mod+c 					$e 	code
bindsym $mos+c 						reload
bindsym $moc+c 					$e 	.bin/rofi_config_menu.sh
bindsym $mod+d 					$e 	discord
bindsym $mod+Down 				$e 	playerctl play-pause
bindsym $mod+e 					$e 	geary
bindsym $mod+Escape 				kill
bindsym $mos+Escape 			$e 	systemctl poweroff -i, mode "default"
bindsym $mod+f 						fullscreen toggle
bindsym $mos+f 						floating toggle
bindsym $mod+g 					$e 	gimp
bindsym $mod+grave 					workspace back_and_forth
bindsym $mod+Home 				$e 	kill -9 -1
bindsym $mod+i 					$e 	.bin/info.sh
bindsym $mos+i 					$e 	optimus-manager --switch intel --no-confirm
bindsym $mod+Insert 			$e 	.bin/toggle_trackpad.sh
bindsym $mod+Left 			    $e 	playerctl previous
bindsym $mod+m 					$e 	midori
bindsym $mod+n 					$e 	.bin/new_i3_workspace.sh
bindsym $mos+n 					$e 	optimus-manager --switch nvidia --no-confirm
bindsym $mod+o 					$e 	libreoffice
bindsym Print 					$e  "scrot ~/Pictures/%Y-%m-%d-%T-screenshot.png"
bindsym $mod+q 					$e 	qutebrowser
bindsym $mos+r 					    restart
bindsym $mod+Return 			$e 	$term
bindsym $mod+Right 				$e 	playerctl next
bindsym $mod+s 					$e 	spotify
bindsym $moc+s 					$e 	.bin/scriptsmenu.sh
bindsym $mod+space 				$e 	rofi -modi drun -show drun -sort
bindsym $mod+t 					$e 	thunar
bindsym $mod+Tab 				$e 	rofi -show window
bindsym $mod+Up 				$e 	playerctl play-pause
bindsym $mod+v 					$e 	virtualbox
bindsym $mod+w 					$e 	firefox
bindsym XF86AudioLowerVolume    $e 	"amixer -q sset Master,0 1- unmute"
bindsym XF86AudioMute 			$e 	"amixer -q sset Master,0 toggle"
bindsym XF86AudioRaiseVolume    $e 	"amixer -q sset Master,0 1+ unmute"
bindsym XF86MonBrightnessDown   $e 	light -U 10
bindsym XF86MonBrightnessUp 	$e 	light -A 10
bindsym $mod+y 					$e 	$term -e "newsboat"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mos+h move left
bindsym $mos+j move down
bindsym $mos+k move up
bindsym $mos+l move right

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 0

bindsym $mos+1 move container to workspace 1
bindsym $mos+2 move container to workspace 2
bindsym $mos+3 move container to workspace 3
bindsym $mos+4 move container to workspace 4
bindsym $mos+5 move container to workspace 5
bindsym $mos+6 move container to workspace 6
bindsym $mos+7 move container to workspace 7
bindsym $mos+8 move container to workspace 8
bindsym $mos+9 move container to workspace 9
bindsym $mos+0 move container to workspace 0

$ea autotiling
$e batsignal
$e dunst
$e feh          --bg-scale ~/Git/wallpapers/0309.png
$e picom           --config ~/.config/picom/picom.conf
$e xset         r rate 200 60
$e unclutter    -b

$e ~/.bin/trackpad_off.sh

client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4 #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36 #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555 #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36 #282A36
client.background       #F8F8F2

bar {
    status_command          i3status
    mode                    hide
    colors {
        background          #282A36
        statusline          #F8F8F2
        separator           #44475A
        focused_workspace  	#44475A #44475A #F8F8F2
        active_workspace   	#282A36 #44475A #F8F8F2
        inactive_workspace 	#282A36 #282A36 #BFBFBF
        urgent_workspace   	#FF5555 #FF5555 #F8F8F2
        binding_mode       	#FF5555 #FF5555 #F8F8F2
    }
}
