set $a  bindsym Mod4+Mod1
set $b  bindsym
set $c  bindsym Mod4+Control
set $e  exec --no-startup-id
set $ea exec_always --no-startup-id
set $f  for_window
set $m  bindsym Mod4
set $s  bindsym Mod4+Shift
set $r  rofi -show
set $t  kitty

floating_modifier   Mod4
font pango:         andika 11
hide_edge_borders   smart

$f [class="^.*"]                    border      pixel 2
$f [class="mpv"]                    fullscreen  enable
$f [class="VirtualBox Manager"]     floating    enable
$f [class="VirtualBox Machine"]     fullscreen  enable
$f [title="pulsemixer"]             fullscreen  enable

$a+a                        $e  audacious
$m+a                            [class="Audacious"] focus
$m+BackSpace                $e  dm-tool lock
$a+c                        $e  code
$c+c                        $e  .bin/rofi_config_menu.sh
$m+c                            [class="Code"] focus
$a+d                        $e  ferdi
$m+d                            [class="Ferdi"] focus
$m+Down                     $e  playerctl play-pause
$a+e                        $e  geary
$m+e                            [class="Geary"] focus
$m+Escape                       kill
$s+Escape                   $e  systemctl poweroff -i, mode "default"
$m+f                            fullscreen toggle
$s+f                            floating toggle
$a+g                        $e  gimp
$m+g                            [class="Gimp"] focus
$m+grave                        workspace back_and_forth
$m+Home                     $e  kill -9 -1
$s+i                        $e  optimus-manager --switch intel --no-confirm
$m+Insert                   $e  .bin/toggle_trackpad.sh
$m+Left                     $e  playerctl previous
$a+m                        $e  midori
$m+m                            [class="Midori"] focus
$m+n                        $e  .bin/new_i3_workspace.sh
$s+n                        $e  optimus-manager --switch nvidia --no-
$m+Next                         workspace next
$a+o                        $e  libreoffice
$m+o                            [class="libreoffice"] focus
$m+p                        $e  $t pulsemixer
$b Print                    $e  scrot ~/Pictures/%Y-%m-%d-%T-screenshot.png
$m+Prior                        workspace prev
$a+q                        $e  qutebrowser
$m+q                            [class="qutebrowser"] focus
$m+r                        $e  $t -e ranger
$s+r                            restart
$m+Return                   $e  $t
$m+Right                    $e  playerctl next
$a+s                        $e  spotify
$m+s                            [class="Spotify"] focus
$c+s                        $e  .bin/scriptsmenu.sh
$m+space                    $e  $r drun -modi drun -sort
$a+t                        $e  thunar
$m+t                            [class="Thunar"] focus
$m+Tab                      $e  $r window
$m+Up                       $e  playerctl play-pause
$a+v                        $e  virtualbox
$a+w                        $e  firefox
$m+w                            [class="firefox"] focus
$b XF86AudioLowerVolume     $e  amixer -D pulse sset Master 2%-
$b XF86AudioMute            $e  amixer sset Master toggle
$b XF86AudioRaiseVolume     $e  amixer -D pulse sset Master 2%+
$b XF86MonBrightnessDown    $e  light -U 10
$b XF86MonBrightnessUp      $e  light -A 10
$m+x                        $e  dunstctl close-all
$a+y                        $e  $t -e newsboat
$m+y                            [title="newsboat"] focus

$m+h focus left
$m+j focus down
$m+k focus up
$m+l focus right

$s+h move left
$s+j move down
$s+k move up
$s+l move right

$m+1 workspace 1
$m+2 workspace 2
$m+3 workspace 3
$m+4 workspace 4
$m+5 workspace 5
$m+6 workspace 6
$m+7 workspace 7
$m+8 workspace 8
$m+9 workspace 9
$m+0 workspace 0

$s+1 move container to workspace 1
$s+2 move container to workspace 2
$s+3 move container to workspace 3
$s+4 move container to workspace 4
$s+5 move container to workspace 5
$s+6 move container to workspace 6
$s+7 move container to workspace 7
$s+8 move container to workspace 8
$s+9 move container to workspace 9
$s+0 move container to workspace 0

$ea autotiling
$e  batsignal
$e  dunst
$e  feh                     --bg-scale ~/Git/wallpapers/0163.jpg
$e  picom                   --config ~/.config/picom/picom.conf
$e  xset                    r rate 200 60
$e  unclutter               -b
$e  .bin/trackpad_off.sh

client.focused              #6272A4 #6272A4 #F8F8F2 #6272A4 #6272A4
client.focused_inactive     #44475A #44475A #F8F8F2 #44475A #44475A
client.unfocused            #282A36 #282A36 #BFBFBF #282A36 #282A36
client.urgent               #44475A #FF5555 #F8F8F2 #FF5555 #FF5555
client.placeholder          #282A36 #282A36 #F8F8F2 #282A36 #282A36
client.background           #F8F8F2

bar {
   status_command          i3status
   mode                    hide
   colors {
       background          #282A36
       statusline          #F8F8F2
       separator           #44475A
       focused_workspace   #44475A #44475A #F8F8F2
       active_workspace    #282A36 #44475A #F8F8F2
       inactive_workspace  #282A36 #282A36 #BFBFBF
       urgent_workspace    #FF5555 #FF5555 #F8F8F2
       binding_mode        #FF5555 #FF5555 #F8F8F2
   }
}
