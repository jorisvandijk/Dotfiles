set $mod Mod4
set $mos Mod4+Shift
set $moc Mod4+Control
set $e exec --no-startup-id
set $term kitty

floating_modifier $mod
for_window [class="^.*"] border pixel 2, title_format "%class >> %title", fullscreen enable

bindsym $mod+a $e kitty -e alsamixer
bindsym $mod+BackSpace $e dm-tool lock
bindsym $mod+c $e code
bindsym $mos+c reload
bindsym $moc+c $e .bin/rofi_config_menu.sh
bindsym $mod+d $e discord
bindsym $mod+Down $e playerctl play-pause
bindsym $mod+Escape kill
bindsym $mos+Escape $e systemctl poweroff -i, mode "default" 
bindsym $mod+f fullscreen toggle
bindsym $mos+f floating toggle
bindsym $mod+g $e gimp
bindsym $mod+grave $e rofi -show window
bindsym $mod+Home $e kill -9 -1
bindsym $mod+i $e .bin/info.sh
bindsym $mos+i $e optimus-manager --switch intel --no-confirm
bindsym $mod+Insert $e .bin/toggle_trackpad.sh
bindsym $mod+Left $e playerctl previous
bindsym $mod+m $e geary
bindsym $mod+n $e .bin/new_i3_workspace.sh
bindsym $mos+n $e optimus-manager --switch nvidia --no-confirm
bindsym $mod+o $e libreoffice
bindsym Print $e "scrot ~/Pictures/%Y-%m-%d-%T-screenshot.png"
bindsym $mos+r restart
bindsym $mod+Return $e $term
bindsym $mod+Right $e playerctl next
bindsym $mod+s $e spotify
bindsym $mos+s $e .bin/scriptsmenu.sh
bindsym $mod+Space $e rofi -modi drun -show drun -sort
bindsym $mod+t $e thunar
bindsym $mod+Tab workspace next
bindsym $mos+Tab workspace prev
bindsym $mod+Up $e playerctl play-pause
bindsym $mod+w $e firefox
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 1- unmute"
bindsym XF86AudioMute exec "amixer -q sset Master,0 toggle"
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 1+ unmute"
bindsym XF86MonBrightnessDown $e light -U 10
bindsym XF86MonBrightnessUp $e light -A 10 
bindsym $mod+y $e $term -e "newsboat"

$e feh --bg-scale ~/Git/wallpapers/0309.png
$e /usr/bin/dunst
$e /usr/bin/unclutter -b
$e picom --config ~/.config/picom/picom.conf
$e batsignal
$e xset r rate 200 60
$e xmodmap -e "keycode 66 = Escape" 	
$e xmodmap -e "clear lock"
$e .bin/trackpad_off.sh
