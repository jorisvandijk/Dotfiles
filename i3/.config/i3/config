set     $b      bindsym
set     $e      exec --no-startup-id
set     $ea     exec_always --no-startup-id
set     $moa    bindsym Mod4+Mod1
set     $moc    bindsym Mod4+Control
set     $mod    bindsym Mod4
set     $mos    bindsym Mod4+Shift
set     $r      rofi -show
set     $t      kitty

floating_modifier   Mod4
font pango:         andika 11
hide_edge_borders   smart

for_window [class="^.*"]                border      pixel 2
for_window [class="mpv"]                fullscreen  enable
for_window [class="VirtualBox Manager"] floating    enable
for_window [class="VirtualBox Machine"] fullscreen  enable
for_window [title="pulsemixer"]         fullscreen  enable

$moa+a                    $e  audacious
$mod+a                        [class="Audacious"] focus
$mod+BackSpace            $e  dm-tool lock
$moa+c                    $e  code
$mod+c                        [class="Code"] focus
$moc+c                    $e  .bin/rofi_config_menu.sh
$moa+d                    $e  ferdi
$mod+d                        [class="Ferdi"] focus
$mod+Down                 $e  playerctl play-pause
$moa+e                    $e  geary
$mod+e                        [class="Geary"] focus
$mod+Escape                   kill
$mos+Escape               $e  systemctl poweroff -i, mode "default"
$mod+f                        fullscreen toggle
$mos+f                        floating toggle
$moa+g                    $e  gimp
$mod+g                        [class="Gimp"] focus
$mod+grave                    workspace back_and_forth
$mod+Home                 $e  kill -9 -1
$mos+i                    $e  optimus-manager --switch intel --no-confirm
$mod+Insert               $e  .bin/toggle_trackpad.sh
$mod+Left                 $e  playerctl previous
$moa+m                    $e  midori
$mod+m                        [class="Midori"] focus
$mod+n                    $e  .bin/new_i3_workspace.sh
$mos+n                    $e  optimus-manager --switch nvidia --no-
$mod+Next                     workspace next
$moa+o                    $e  libreoffice
$mod+o                        [class="libreoffice"] focus
$mod+p                    $e  $t pulsemixer
$b Print                  $e  scrot ~/Pictures/%Y-%m-%d-%T-screenshot.png
$mod+Prior                    workspace prev
$moa+q                    $e  qutebrowser
$mod+q                        [class="qutebrowser"] focus
$mod+r                    $e  $t -e ranger
$mos+r                        restart
$mod+Return               $e  $t
$mod+Right                $e  playerctl next
$moa+s                    $e  spotify
$mod+s                        [class="Spotify"] focus
$moc+s                    $e  .bin/scriptsmenu.sh
$mod+space                $e  $r drun -modi drun -sort
$moa+t                    $e  thunar
$mod+t                        [class="Thunar"] focus
$mod+Tab                  $e  $r window
$mod+Up                   $e  playerctl play-pause
$moa+v                    $e  virtualbox
$moa+w                    $e  firefox
$mod+w                        [class="firefox"] focus
$b XF86AudioLowerVolume   $e  amixer -D pulse sset Master 2%-
$b XF86AudioMute          $e  amixer sset Master toggle
$b XF86AudioRaiseVolume   $e  amixer -D pulse sset Master 2%+
$b XF86MonBrightnessDown  $e  light -U 10
$b XF86MonBrightnessUp    $e  light -A 10
$mod+x                    $e  dunstctl close-all
$moa+y                    $e  $t -e newsboat
$mod+y                        [title="newsboat"] focus

$mod+h focus left
$mod+j focus down
$mod+k focus up
$mod+l focus right

$mos+h move left
$mos+j move down
$mos+k move up
$mos+l move right

$mod+1 workspace 1
$mod+2 workspace 2
$mod+3 workspace 3
$mod+4 workspace 4
$mod+5 workspace 5
$mod+6 workspace 6
$mod+7 workspace 7
$mod+8 workspace 8
$mod+9 workspace 9
$mod+0 workspace 0

$mos+1 move container to workspace 1
$mos+2 move container to workspace 2
$mos+3 move container to workspace 3
$mos+4 move container to workspace 4
$mos+5 move container to workspace 5
$mos+6 move container to workspace 6
$mos+7 move container to workspace 7
$mos+8 move container to workspace 8
$mos+9 move container to workspace 9
$mos+0 move container to workspace 0

$ea autotiling
$e  batsignal
$e  dunst
$e  feh                     --bg-scale ~/Git/wallpapers/0163.jpg
$e  picom                   --config ~/.config/picom/picom.conf
$e  xset                    r rate 200 60
$e  unclutter               -b
$e  .bin/trackpad_off.sh

client.focused              #6272A4 #6272A4 #F8F8F2 #6272A4 #6272A4
client.focused_inactive     #44475A #44475A #F8F8F2 #44475A #44475A
client.unfocused            #282A36 #282A36 #BFBFBF #282A36 #282A36
client.urgent               #44475A #FF5555 #F8F8F2 #FF5555 #FF5555
client.placeholder          #282A36 #282A36 #F8F8F2 #282A36 #282A36
client.background           #F8F8F2

bar {
   status_command          i3status
   mode                    hide
   colors {
       background          #282A36
       statusline          #F8F8F2
       separator           #44475A
       focused_workspace   #44475A #44475A #F8F8F2
       active_workspace    #282A36 #44475A #F8F8F2
       inactive_workspace  #282A36 #282A36 #BFBFBF
       urgent_workspace    #FF5555 #FF5555 #F8F8F2
       binding_mode        #FF5555 #FF5555 #F8F8F2
   }
}
