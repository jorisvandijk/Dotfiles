floating_modifier   Mod4
font pango:         andika 11
hide_edge_borders   smart

for_window [class="^.*"]                      border      pixel 2
for_window [class="mpv"]                      fullscreen  enable
for_window [class="firefox" urgent="latest"]  focus
for_window [class="Code" urgent="latest"]     focus

set $1 bindsym Mod4
set $2 exec --no-startup-id 
set $3 bindsym Mod4+Shift
set $4 kitty
set $5 exec --no-startup-id .bin/SwitchLaunch.sh 
set $6 exec_always --no-startup-id
set $7 bindsym Mod4+Mod1

$1+1      workspace 1
$1+c  $5  code C
$1+d  $5  ferdi D
$1+e  $5  geary E
$1+f      fullscreen toggle
$1+g  $5  gimp G
$1+i  $2  .bin/info.sh
$1+n  $5  obsidian N
$1+o  $5  libreoffice O
$1+r  $5  rider R
$1+s  $5  spotify S
$1+t  $5  thunar T
$1+w  $5  firefox W
$1+x  $2  dunstctl close-all
$1+y  $5  newsboat Y

$3+1 move container to workspace 1
$3+c move container to workspace C
$3+d move container to workspace D
$3+e move container to workspace E
$3+f move container to workspace F
$3+g move container to workspace G
$3+i move container to workspace I
$3+n move container to workspace N
$3+o move container to workspace O
$3+r move container to workspace R
$3+s move container to workspace S
$3+t move container to workspace T
$3+w move container to workspace W
$3+x move container to workspace X
$3+y move container to workspace Y

$1+BackSpace     $2  dm-tool lock
$1+Down          $2  playerctl play-pause
$1+equal         $2 .bin/new_i3_workspace.sh
$1+Escape            [con_id="__focused__" instance="^(?!__*).*$"] kill
$1+grave             workspace back_and_forth
$1+Home          $2  i3-msg exit
$1+Insert        $2  .bin/toggle_trackpad.sh
$1+Left          $2  playerctl previous
$1+Next              workspace next
$1+Prior             workspace prev
$1+Return        $2  $4
$1+Right         $2  playerctl next
$1+space         $2  rofi -show drun -modi drun -sort
$1+Tab           $2  rofi -show window    
$1+Up            $2  playerctl play-pause

$7+c             $2  .bin/rofi_config_menu.sh
$7+Escape        $2  systemctl poweroff -i, mode "default"
$7+f                 floating toggle
$7+i             $2  optimus-manager --switch intel   --no-confirm
$7+n             $2  optimus-manager --switch nvidia  --no-confirm
$7+r                 restart
$7+s             $2  .bin/scriptsmenu.sh
$7+y             $2  mpv $(xsel -b)

bindsym Print                    $2  scrot ~/Pictures/%Y-%m-%d-%T-screenshot.png
bindsym XF86AudioLowerVolume     $2  amixer -D pulse sset Master 2%-
bindsym XF86AudioMute            $2  amixer sset Master toggle
bindsym XF86AudioRaiseVolume     $2  amixer -D pulse sset Master 2%+
bindsym XF86MonBrightnessDown    $2  light -U 10
bindsym XF86MonBrightnessUp      $2  light -A 10

$1+h focus left
$1+j focus down
$1+k focus up
$1+l focus right

$3+h move left
$3+j move down
$3+k move up
$3+l move right

$6 autotiling
$2 batsignal
$2 clipster -d 
$2 dunst
$2 feh                     --bg-scale ~/Pictures/wallpaper_fall.jpg
$2 picom                   --config ~/.config/picom/picom.conf
$2 xset                    r rate 200 60
$2 unclutter               -b
$2 .bin/trackpad_off.sh

client.focused              #6272A4 #6272A4 #F8F8F2 #6272A4 #6272A4
client.focused_inactive     #44475A #44475A #F8F8F2 #44475A #44475A
client.unfocused            #282A36 #282A36 #BFBFBF #282A36 #282A36

# i3-msg "[class=$class] move container to workspace current"
# What you can do is go further, have rofi list all windows, and then select the exact one you want with [id=$id]